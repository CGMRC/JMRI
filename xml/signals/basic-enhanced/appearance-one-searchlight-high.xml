  <aspecttable>basic-enhanced</aspecttable>
  <name>Single searchlight high signal</name>
  <reference>(similar to basic signals described in various magazine articles)</reference>
  <description>A simple signal mast based on similar mast used in the "basic" signal system, but
    with addition of an Advanced Approach appearance.
  </description>
  
  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-G.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-Y.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advanced Approach</aspectname>
      <show>flashyellow</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-FY-animated.gif</imagelink>
      <imagelink type="noflash">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-FY-static.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-R.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Unlit</aspectname>
      <show>dark</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-dark.gif</imagelink>
    </appearance>


  </appearances>
  
  <specificappearances>
    <!-- Start of Specific Appearances list -->

    <danger>
      <aspect>Stop</aspect>
    </danger>

    <held>
      <aspect>Stop</aspect>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-1-high/SL-1-high-held.gif</imagelink>
    </held>

    <dark>
      <aspect>Unlit</aspect>
    </dark>

  </specificappearances><!-- End of Specific Appearances list -->
  
  <aspectMappings><!-- Start of Aspect Mapping -->

    <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Advanced Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Advanced Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Approach</advancedAspect>
      <ourAspect>Advanced Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Secondary Diverging Approach</advancedAspect>
      <ourAspect>Advanced Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Advanced Approach</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
       <advancedAspect>Secondary Diverging Advanced Approach</advancedAspect>
       <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Diverging Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Secondary Diverging Clear</advancedAspect>
      <ourAspect>Clear</ourAspect>
    </aspectMapping>

  </aspectMappings><!-- End of Aspect Mapping -->

