  <aspecttable>basic-enhanced</aspecttable>
  <name>Double searchlight high signal</name>
  <reference>(similar to basic signals described in various magazine articles)</reference>
  <description>A simple two-headed signal mast for use at simple/single turnouts.
    This signal mast based on similar mast used in the "basic" signal system, but
    with addition of an Advanced Approach appearance.
  </description>

  <appearances>

    <appearance>
      <aspectname>Clear</aspectname>
      <show>green</show>
      <show>red</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-G-R.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Approach</aspectname>
      <show>yellow</show>
      <show>red</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-Y-R.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advanced Approach</aspectname>
      <show>flashyellow</show>
      <show>red</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-FY-R-animated.gif</imagelink>
      <imagelink type="noflash">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-FY-R-static.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Stop</aspectname>
      <show>red</show>
      <show>red</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-R-R.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-R-G.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Approach</aspectname>
      <show>red</show>
      <show>yellow</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-R-Y.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Diverging Advanced Approach</aspectname>
      <show>red</show>
      <show>flashyellow</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-R-FY-animated.gif</imagelink>
      <imagelink type="noflash">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-R-FY-static.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Unlit</aspectname>
      <show>dark</show>
      <show>dark</show>
      <imagelink type="aspects">../../../resources/icons/smallschematics/aspects/basic-enhanced/SL-2-high/SL-2-high-dark.gif</imagelink>
    </appearance>

  </appearances>

